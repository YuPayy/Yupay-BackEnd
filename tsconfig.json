{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ESNext"],
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["app/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
